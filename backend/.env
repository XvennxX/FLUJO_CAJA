# Configuración del Sistema de Flujo de Caja

# Base de datos MySQL
DATABASE_URL=mysql+pymysql://root:@localhost:3306/flujo_caja_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=flujo_caja_db

# Configuración de JWT
SECRET_KEY=super-secret-key-change-in-production-flujo-caja-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de la aplicación
DEBUG=True
APP_NAME=Sistema de Flujo de Caja
APP_VERSION=1.0.0

# CORS (permite el frontend en desarrollo)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:5173"]

# Redis (opcional para caché)
REDIS_URL=redis://localhost:6379

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Email (para notificaciones - opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@flujocaja.com
